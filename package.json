{
  "name": "yonkenella-server",
  "version": "1.0.0",
  "main": "server.ts",
  "license": "MIT",
  "scripts": {
    "start:dev": "yarn run build:dev",
    "build:dev": "nodemon 'src/server.ts' --exec 'ts-node' src/server.ts -e ts",
    "start:prod": "yarn list-contents && node ./dist/server.js",
    "build:prod": "tsc && yarn copy-schemas",
    "copy-schemas": "$(npm bin)/cpx src/**/*.graphql dist",
    "list-contents": "ls -la && ls -la ./dist"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.3",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/node": "^13.9.0",
    "cpx": "^1.5.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.0-beta.2",
    "graphql-import-node": "^0.0.4",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "apollo-server-express": "^2.11.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "http": "^0.0.0"
  }
}
